<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="?android:attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_main"
        android:layout_width="match_parent"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_main"
            app:elevation="0dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageView
                android:id="@+id/imageview_menu_icon"
                android:visibility="visible"
                android:padding="@dimen/size_medium"
                android:background="@drawable/ripple_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:src="@drawable/ic_back"/>

            <TextView
                android:id="@+id/textview_toolbar_title"
                android:textSize="@dimen/textsize_h4"
                android:textColor="@color/white"
                style="@style/PrimaryMediumTitle"
                android:layout_width="wrap_content"
                android:visibility="visible"
                android:layout_marginStart="@dimen/size_xmedium"
                android:text="@string/app_name"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.constraintlayout.widget.ConstraintLayout>